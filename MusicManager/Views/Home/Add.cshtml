@model MusicManager.Models.Song

@{ 
    ViewBag.Title = "Add Songs";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    // @Html.ValidationSummary("The following errors were found:", new { @class = "alert alert-danger" })

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.SongName, new { @class = "control-label" })
                @Html.TextAreaFor(m => m.SongName, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Artist, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Artist, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Album, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Album, new { @class = "form-control" })
            </div>
            <div>
                @Html.LabelFor(m => m.Song.Duration, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Song.Duration, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        @Html.CheckBoxFor(m => m.Song.Exclude) @Html.DisplayNameFor(m => m.Song.Exclude)
                    </label>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-12">
        <div class="pad-top">
            <button type="submit" class="btn btn-success btn-lg margin-right">
                <span class="glyphicon glyphicon-save"></span> Save
            </button>
            <a href="@Url.Action("Music")" class="btn btn-warning btn-lg">
                <span class="glyphicon glyphicon-remove"></span> Cancel
            </a>
        </div>
    </div>
}
